<%= form_for @experiment, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :winner, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <% @experiment.variations.each do |v| %>
        <label for="winningVariation">
          <%= f.radio_button :winner, v.optimizely_id %>
          <!-- <input type="radio" name="winner" id="winner" value="<%= v.optimizely_id %>" /> -->
          <%= image_tag v.screencap.url(:thumb) %>
        </label>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :confidence, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :confidence, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :brief, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :brief, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hypothesis, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :hypothesis, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :experiment_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :experiment_url, :class => 'text-field form-control disabled', disabled: 'disabled' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :result_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :result_url, :class => 'text-field form-control disabled', disabled: 'disabled' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit 'Save Changes', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  experiments_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
