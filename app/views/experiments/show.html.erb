<%- model_class = Experiment -%>
<div class="page-header">
  <h1><%=t '.title', :default => Experiment %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:screenshot_original) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.screenshot_original %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:screenshot_variation) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.screenshot_variation %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:winner) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.winner %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:confidence) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.confidence %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:brief) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.brief %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hypothesis) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.hypothesis %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:experiment_url) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.experiment_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:result_url) %></dt>
      <dd><pre class="prettyprint"><%= @experiment.result_url %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              experiments_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_experiment_path(@experiment), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              experiment_path(@experiment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

